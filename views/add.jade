extends layout

block content
	include navbar
	section.container
		include header
		div.container.center
			-for (var i = 0; i < nums; ++i){
				form.form(method="POST")
					fieldset
						div.input-group.mb-3
							div.input-group-prepend
								span#basic-addon1.input-group-text(for="acuerdo_id") Id:
							input#acuerdo_id.form-control(type="text", name="acuerdo_id",value='#{data[i]}', disabled)
							input.item.i-b.v-top.ph9.p_25#acuerdo_id(type="hidden", value='#{data[i]}' name="acuerdo_id")
						div.input-group.mb-3
							div.input-group-prepend
								span#basic-addon1.input-group-text(for="nro_acuerdo") Numero de acuerdo:
							input#nro_acuerdo.form-control(type="text", name="nro_acuerdo", placeholder="Numero de acuerdo" required)
						div.input-group.mb-3
							div.input-group-prepend
								span#basic-addon1.input-group-text(for="fecha") Fecha:
							input#fecha.form-control(type="date", name="fecha", placeholder="dia")
						div.input-group.mb-3
							.input-group-prepend
								span.input-group-text(for="detalle") Detalle:
							//- input.item.i-b.v-top.ph9.p_25#detalle(type="textarea", name="detalle", required)
							textarea.txtadd.form-control.bg-transparent(name="detalle", maxlength="255", aria-label="Detalle:" required)
					div.text-center
						input.btn.btn-success.btn-lg.add.mr-md-3(type="submit", value="Agregar")
						a.btn.btn-danger.btn-lg(href="/") cancelar
