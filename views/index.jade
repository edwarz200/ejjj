extends layout

block content
	include navbar
	section.c-95
		include header
		article.item
			-if(data.length)
				table.table.table-striped
					tr.row
						th.col-2(scope="col") Id
						th.col-2(scope="col") N° de acuerdo
						th.col-2(scope="col") Fecha
						th.col-4(scope="col") Detalle
						th.col-2(scope="col", colspan="2")
							form(method="GET" action="/agregar")
								input.button.add(type="submit", value="Agregar")
					-each ac in data
						tr.row
							th.col-2(scope="row") #{ac.acuerdo_id}
							td.col-2 #{ac.nro_acuerdo}
							td.col-2 #{ac.fecha}
							td.col-4
								article.w-100.h-100.textarea(disabled)
									p #{ac.detalle}
							td.col-2
								form(method="GET" action="/editar/#{ac.acuerdo_id}")
									input.button.edit(type="submit", value="Editar")
								form(method="POST" action="/eliminar/#{ac.acuerdo_id}")
									input.button.delete(type="button", onclick="eliminar(this)").btn.btn-danger.far.fa-trash-alt
									input(type="hidden", name="_method", value="DELETE")
				script.
					function eliminar(input)
					{
						var deleteOk = confirm('¿Estás seguro de eliminar la película?')
						return (deleteOk) ? input.parentNode.submit() : false
					}
			-else
				table.table.table-striped
						tr
							th(scope="col") Id
							th(scope="col") N° de acuerdo
							th(scope="col") Fecha
							th(scope="col") Detalle
							th(scope="col", colspan="2")
								form(method="GET" action="/agregar")
									input.button.add(type="submit", value="Agregar")
							tr
								th.no_selection.text-black-50(scope="row") Sin informacion
								td.no_selection.text-black-50 Sin informacion
								td.no_selection.text-black-50 Sin informacion
								td.no_selection.text-black-50 Sin informacion 
								td.no_selection
								
	include footer